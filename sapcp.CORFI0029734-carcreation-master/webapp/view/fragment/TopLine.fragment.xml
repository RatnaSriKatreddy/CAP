					<Input value="{TopLineJSONModel>Y5}" editable="{= !${TopLineJSONModel>Name}.includes('New Capacity')}"
						liveChange="onLiveChangeInputTopLineTable" type="Text"
						valueState="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY5ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY5ValueState} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY5ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY5ValueState} : 'None'}"
						valueStateText="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY5ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY5ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY5ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY5ValueStateText} : 'None'}"/>
					<Input value="{TopLineJSONModel>Y6}" editable="{= !${TopLineJSONModel>Name}.includes('New Capacity')}"
						liveChange="onLiveChangeInputTopLineTable" type="Text"
						valueState="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY6ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY6ValueState} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY6ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY6ValueState} : 'None'}"
						valueStateText="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY6ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY6ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY6ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY6ValueStateText} : 'None'}"/>
