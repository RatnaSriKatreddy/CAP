<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<FlexBox width="100%" justifyContent="Center">
		<Label text="Sales should be completed in Volumes (K Tons or '000 Liters)" class="sapUiSmallMarginBottom"/>
	</FlexBox>
	<Table class="sapUiSizeCompact" items="{TopLineJSONModel>/}">
		<columns>
			<Column hAlign="End" width="10rem">
				<Text text=""/>
			</Column>
			<Column>
				<Label design="Bold" text="Y1"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y2"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y3"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y4"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y5"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y6"/>
			</Column>
			<Column>
				<Label design="Bold" text="Y7"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Label text="{TopLineJSONModel>Name}" design="Bold" required="{= !${TopLineJSONModel>Name}.includes('New Capacity')}" wrapping="true"/>
					<Input value="{TopLineJSONModel>Y1}" editable="{= !${TopLineJSONModel>Name}.includes('New Capacity')}"
						liveChange="onLiveChangeInputTopLineTable" type="Text"
						valueState="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY1ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY1ValueState} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY1ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY1ValueState} : 'None'}"
						valueStateText="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY1ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY1ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY1ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY1ValueStateText} : 'None'}"/>
