					<Input value="{TopLineJSONModel>Y4}" editable="{= !${TopLineJSONModel>Name}.includes('New Capacity')}"
						liveChange="onLiveChangeInputTopLineTable" type="Text"
						valueState="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY4ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY4ValueState} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY4ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY4ValueState} : 'None'}"
