						liveChange="onLiveChangeInputTopLineTable" type="Text"
						valueState="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY7ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY7ValueState} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY7ValueState} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY7ValueState} : 'None'}"
						valueStateText="{= ${TopLineJSONModel>Name}.includes('Actual Capacity') ? ${errorModel>/ActualCapacityY7ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Additional Capacity') ? ${errorModel>/AdditionalCapacityY7ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('New Capacity') ? ${errorModel>/NewCapacityY7ValueStateText} : ${incrementalBusinessJSONModel>Name}.includes('Demand') ? ${errorModel>/DemandY7ValueStateText} : 'None'}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<FlexBox width="100%" justifyContent="Center">
		<Label required="true" text="Please complete all the fields in order to generate the graph" class="sapUiSmallMarginTop"/>
	</FlexBox>
</core:FragmentDefinition>